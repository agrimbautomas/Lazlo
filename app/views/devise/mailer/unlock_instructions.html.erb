<style type="text/css">

  .main-content.full-image a {
    background: white;
    width: 60%;
    display: inline-block;
    margin: 250px auto 35px;
    padding: 16px;
    font-size: 1.7em;
    color: #010203;
  }

  .main-content.full-image a span {
    font-weight: bold;
  }


  .featured-container img {
    width: 100%;
  }

  .footer {
    text-align: left;
  }


  table, tr, td {
    vertical-align: top;
    border-collapse: collapse;
  }

  .ie-browser table, .mso-container table {
    table-layout: fixed;
  }

  * {
    line-height: inherit;
  }

  a[x-apple-data-detectors=true] {
    color: inherit !important;
    text-decoration: none !important;
  }
</style>
<div class="floating-header">
  <div style="text-align:left;width:90%;max-width:700px;margin:0px auto;">
    <a href="https://lazlo.la/" target="_blank" style="display:inline-block;margin:35px 0px;">
      <img src="<%= @images[:logo] %>"></a>
    <div style="display:inline-block;float:right;margin:40px 0px 0px;">
      <a target="_blank" href="https://www.facebook.com/lazlo.design"
         style="background:#9e9e9e url('<%= @images[:facebook] %>');color:#FFFFFF;display:inline-block;border-radius:50%;text-align:center;width:28px;height:28px;background-position:center;background-repeat:no-repeat;background-size:55%;">
      </a>
      <a target="_blank" href="https://www.instagram.com/lazlo.la/"
         style="background:#9e9e9e url('<%= @images[:instagram] %>');color:#FFFFFF;display:inline-block;border-radius:50%;text-align:center;margin:0px 0px 0px 10px;width:28px;height:28px;background-position:center;background-repeat:no-repeat;background-size:55%;">
      </a>
      <a target="_blank" href="https://pinterest.com/lazlola/"
         style="background:#9e9e9e url('<%= @images[:pinterest] %>');color:#FFFFFF;display:inline-block;border-radius:50%;text-align:center;margin:0px 0px 0px 10px;width:28px;height:28px;background-position:center;background-repeat:no-repeat;background-size:55%;">
      </a>
    </div>
  </div>
</div>
<div class="main"
     style="background:#FFFFFF;border:1px solid #e8e8e8;padding:0px 0px 60px;margin:0px auto 30px;width:92%;max-width:700px;text-align:center;">

  <!-- HEADER IMAGES -->
  <div class="header-image" style="height: 300px; background-size: cover;
      position: relative; background:url('<%= @images[:header] %>') center;">
    <a href="https://lazlo.la/" class="cta-button" style="   background: #fed604;
        color: #010203;
        font-weight: bolder;
        padding: 14px 5%;
        text-decoration: none;
        width: 60%;
        font-size: 1.5em;
        display: inline-block;
        margin: 108px auto 0;">
      Hola <%= @email %>!
    </a>
  </div>
  <!-- END HEADER IMAGES -->

  <!-- TITLES -->
  <div class="main-content" style="width:90%;margin:0px 5%;">
    <h5 style="font-family:'Space Mono', monospace;width:80%;margin:24px auto;line-height:32px;color:#3b403c;font-size:.9em;">
      Te contactamos porque despues de reiterados intentos de inicio de sesión se bloqueó tu cuenta.
      <br>
      Hacé click en el link de abajo para desbloquearla.
    </h5>
  </div>
  <!-- END TITLES -->


  <!-- CONFIRMAR CUENTA -->
  <div class="main-content" style="width: 90%; margin: 30px 5% 80px; display: inline-block;">
    <%= link_to 'Desbloquear mi cuenta', unlock_url(@resource, unlock_token: @token) %>
  </div>
  <!-- END CONFIRMAR CUENTA -->

  <!-- FOOTER -->
  <div class="footer main-content email-grid" style="width:90%;margin:0px 5%;">
    <a href="https://lazlo.la/" target="_blank"
       style="display:inline-block;margin:35px 0px;width:100%;text-align:center;">
      <img src="<%= @images[:logo] %>"></a>
    <div style="display:inline-block;width:100%;text-align:center;margin:0px auto;">
      <a target="_blank" href="https://www.facebook.com/lazlo.design"
         style="background:#9e9e9e url('<%= @images[:facebook] %>');color:#FFFFFF;display:inline-block;border-radius:50%;text-align:center;width:28px;height:28px;background-position:center;background-repeat:no-repeat;background-size:55%;">
      </a>
      <a target="_blank" href="https://www.instagram.com/lazlo.la/"
         style="background:#9e9e9e url('<%= @images[:instagram] %>');color:#FFFFFF;display:inline-block;border-radius:50%;text-align:center;margin:0px 0px 0px 10px;width:28px;height:28px;background-position:center;background-repeat:no-repeat;background-size:55%;">
      </a>
      <a target="_blank" href="https://pinterest.com/lazlola/"
         style="background:#9e9e9e url('<%= @images[:pinterest] %>');color:#FFFFFF;display:inline-block;border-radius:50%;text-align:center;margin:0px 0px 0px 10px;width:28px;height:28px;background-position:center;background-repeat:no-repeat;background-size:55%;">
      </a>
    </div>
  </div>
  <!-- END FOOTER -->
</div>
