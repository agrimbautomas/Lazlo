<div class="register-section grilla">


  <a class="logo" href="<%= root_path %>">
    <%= image_tag('logo-alomacain.png') %>
  </a>

  <div class="register-box grilla medium-border-radious">

    <div class="register-nav-container">
      <div class="register-nav ">
        <h3>Crear Cuenta</h3>
      </div>
    </div>

    <div class="register-inner-container">

      <%= link_to "Crear cuenta con Facebook", user_facebook_omniauth_authorize_path, class: 'register-fb smooth-transition small-border-radious' %>
      <span class="letter-div">ó</span>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Creat cuenta" %>
          </div>
      <% end %>


      <label class="new-label">Ya tenés cuenta en AloMacain?</label>
      <%- if controller_name != 'sessions' %>

          <%= link_to "Ingresá a tú Cuenta", new_session_path(resource_name), class: 'create-account smooth-transition' %>
          <br/>
      <% end -%>

    </div>
  </div>
</div>


