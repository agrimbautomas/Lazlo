<div class="register-section">

  <div class="register-pop-up new-account-pop-up">

    <a class="" href="<%= root_path %>">
      <svg class="close-register-form">
        <use xlink:href="<%= image_url('sprite.svg') %>#close-cross"/>
      </svg>
    </a>

    <a class="logo" href="<%= root_path %>">
      <svg>
        <use xlink:href="<%= image_url('sprite.svg') %>#lazlo-logo"/>
      </svg>
    </a>


    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, label: 'Correo electrónico' %>
          <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true, placeholder: 'Confirmar contraseña', label: nil %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "CREAR CUENTA" %>
        </div>
    <% end %>

    <span>sino</span>

    <%= link_to "Crear cuenta con Facebook", user_facebook_omniauth_authorize_path, class: 'register-fb smooth-transition small-border-radious' %>


    <label class="new-label">¿Ya tenés cuenta en LAZLO.?</label>
    <%- if controller_name != 'sessions' %>
        <%= link_to "INGRESAR", new_session_path(resource_name), class: 'create-account smooth-transition' %>
    <% end -%>

  </div>

  <div class="register-black-filter"></div>

</div>


