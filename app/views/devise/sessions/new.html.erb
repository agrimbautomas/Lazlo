<div class="register-section grilla">


  <a class="logo" href="<%= root_path %>">
    <%= image_tag('logo-macain-300.png') %>
  </a>

  <div class="register-box grilla medium-border-radious">

    <div class="register-nav-container">
      <div class="register-nav ">
        <h3>Log in</h3>
      </div>
    </div>

    <div class="register-inner-container">

      <%= link_to "Ingresar con Facebook", user_omniauth_authorize_path(:facebook), class: 'register-fb smooth-transition small-border-radious' %>
      <span class="letter-div">ó</span>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Olvidó su contraseña?", new_password_path(resource_name), class: 'forgot-password' %>
                <br/>
            <% end -%>
            <%= f.input :remember_me, label: 'Recordar usuario', class: 'remember-user', as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Ingresar', class: 'smooth-transition' %>
          </div>
      <% end %>

      <label class="new-label">Nuevo en Macain?</label>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Crear cuenta en Macain", new_registration_path(resource_name), class: 'create-account smooth-transition' %><br/>
        <% end -%>


    </div>
  </div>
</div>