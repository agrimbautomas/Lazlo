<!-- Start Header -->
<%= render :partial => 'layouts/header' %>
<!-- End Header -->


<div class="grilla margin-top-medium">
  <div class="breadcrumbs">
    <a href="<%= root_path %>">Macain</a>
    <span>/</span>
    <a href="<%= category_path @category %>"><%= @category.name %></a>
    <span>/</span>
    <a href="<%= product_path %>" class="active"><%= @product.name %></a>
  </div>
</div>

<div class="grilla product-detail-section">

  <div class="tables-box-container tables-box-container-detail">


    <div class="products-white-container">
      <div class="inner-container">

        <div class="half-container half-container-left">

          <% if @product.product_images.present? %>
              <div id="product-images-gallery" class="product-images-gallery">

                <a href="#" class="active" data-image="<%= @product.image.url(:big) %>" data-zoom-image="<%= @product.image.url(:big) %>">
                  <img id="img_01" src="<%= @product.image.url(:thumb) %>"/>
                  <span class="thumb-filter smooth-transition"></span>
                </a>

                <% @product.product_images.each do |image| %>
                    <a href="#" data-image="<%= image.picture.url(:big) %>" data-zoom-image="<%= image.picture.url(:big) %>">
                      <img id="img_01" src="<%= image.picture.url(:thumb) %>"/>
                      <span class="thumb-filter smooth-transition"></span>
                    </a>
                <% end %>

              </div>
          <% end %>


          <div class="image-detail-container">

            <img id="product-detail-zoom" src='<%= @product.image.url(:big) %>' data-zoom-image="<%= @product.image.url(:big) %>"/>
          </div>
        </div>


        <div class="half-container half-container-right">
          <h1><%= @product.name %></h1>

          <div class="text-detail-container">

            <div class="product-price-box">
              <div class="product-price">$<%= @product.price.to_i %></div>
              <label>PROMOCIÃ“N ONLINE</label>
            </div>

            <div class="product-description">
              <%= simple_format(@product.description) %>
            </div>
            <!--
          <div class="product-quantity" data-request-path="<%= product_purchase_data_path @product %>">
            <%= number_field_tag 'quantity', 1, min: 1 %>
          </div>

            -->

            <% if user_signed_in? %>
                <% product_link = Rails.env.development? ? @product.payment['response']['sandbox_init_point'] : @product.payment['response']['init_point'] %>
                <a href="<%= product_link %>" name="MP-Checkout" class="product-buy-button green-button smooth-transition">
                  COMPRAR
                </a>
                <a class="add-favourites-btn" href="<%= product_add_to_fauvorites_url @product %>">
                  <i class="fa fa-heart" aria-hidden="true"></i>
                </a>
            <% else %>
                <a href="<%= new_user_session_path %>" class="product-buy-button green-button smooth-transition">
                  REGISTRATE PARA COMPRAR
                </a>
            <% end %>

            <span class="payment-methods"></span>
            <script type="text/javascript" src="//resources.mlstatic.com/mptools/render.js"></script>
          </div>
        </div>

      </div>
    </div>
  </div>


</div>

<!-- Start Footer -->
<%= render :partial => 'layouts/footer' %>
<!-- End Footer -->
