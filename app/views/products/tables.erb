<%= render :partial => 'home/fixed_top_nav' %>



<div class="tables-box-container">
  <h1>Mesas Macain</h1>

  <div class="inner-container">

    <%
       @tables.each do |table|
         @size = 'size' + rand(1...4).to_s + rand(1...4).to_s;
    %>
        <a class="table-box small-box <%= @size %>"
           href="<%= product_path(table) %>"
           style="background-image: url('<%= table.image.url(:big) %>');">

          <div class="hidden-info">
            <h2><%= table.name %></h2>

            <p><%= table.description %></p>

            <p>Precio: $<%= table.price %></p>

          </div>


        </a>
    <% end %>
  </div>
</div>



