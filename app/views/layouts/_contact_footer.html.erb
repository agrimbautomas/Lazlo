<!-- Start Contact -->
<div class="slider-block odd">
  <div class="grilla grilla-social">
    <div class="social">

      <a class="social-block  face" href="https://www.facebook.com/allomacain" target="_blank">
        <%= image_tag('face.png') %>
      </a>

      <a class="social-block ml" href="http://listado.mercadolibre.com.ar/_CustId_130206835" target="_blank">
        <%= image_tag('ml.png', :class => 'hide-in-mobile') %>
        <%= image_tag('mercadolibre-dark.png', :class => 'hide-in-desktop') %>
      </a>

      <a class="social-block ins" href="https://www.instagram.com/alo_macain/" target="_blank">
        <%= image_tag('ins.png') %>
      </a>

    </div>

    <%= form_tag('/contact_email', :method => 'POST', :class => 'contact') do %>
        <div class="mail">
          <h4>Consultá por los productos</h4>
          <h5><a href="mailto:alo@macain.com.ar" target="_blank">alo@macain.com.ar</a></h5>

          <input type="text" name="name" placeholder="Nombre" required/>

          <input type="tel" name="tel" size="20" placeholder="Teléfono" required/>

          <input type="email" name="email" placeholder="E-mail" required/>

          <input type="text" name="message" placeholder="Consulta" required/>

          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

          <%= submit_tag('Enviar', :class => 'but') %>
        </div>
    <% end %>

  </div>
</div>

<!-- End Contact -->


