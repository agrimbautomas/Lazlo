<!-- Start Footer -->
<footer class="footer">
  <div class="grilla">

    <div class="footer-block ">
      <h6>INSCRIBITE A NUESTRO NEWSLETTER</h6>

      <form class="newsletter-footer-form" url="<%= add_to_newsletter_url %>">
        <input type="email" name="email" class="newsletter-email" placeholder="Ingresa tú email">
        <button class="transparent-with-hover-yellow">ENVIAR</button>
      </form>

      <div class="social-icons">
        <a target="_blank" href="https://www.facebook.com/lazlo.design">
          <img src="<%= image_url('icons/facebook-icon-yellow.svg') %>">
        </a>

        <a target="_blank" href="https://www.instagram.com/lazlo.la/">
          <img src="<%= image_url('icons/instagram-icon-yellow.svg') %>">
        </a>

        <a target="_blank" href="https://pinterest.com/lazlola/">
          <img src="<%= image_url('icons/pinterest-icon-yellow.svg') %>">
        </a>

      </div>
    </div>

    <div class="footer-block">

      <h6>
        SEGUINOS EN INSTAGRAM
        <a href="https://www.instagram.com/<%= @instagram_username %>" target="_blank">
          @<%= @instagram_username %>
        </a>
      </h6>

      <% if @instagram_images.present? %>
        <div class="instagram-fotos">
          <% @instagram_images.each_with_index do |media_item, i| %>
            <a href="<%= media_item.link %>" target="_blank">
              <img src="<%= media_item.images.thumbnail.url %>">
            </a>
          <% end %>
        </div>
      <% end %>

    </div>

    <div class="footer-block">
      <h6>CONTACTO</h6>

      <div class="contact">
        <a href="tel:+5491158620355">
          <i class="fa fa-whatsapp" aria-hidden="true"></i>
          +54 911 5862 0355
        </a>
        <!--
         /
        <a href="tel:+541135555555">+54 11 3555 5555</a>
        -->
        <address alt="hola@lazlo.la">hola@lazlo.la</address>

      </div>


    </div>


  </div>
</footer>
