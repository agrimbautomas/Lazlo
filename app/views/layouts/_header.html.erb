<header>

  <!-- Notifications -->
  <div class="notification-bar notice
    <% if notice.nil? %> hidden-bar
    <% end %>">
    <p><%= notice %></p>
    <svg class="close-notification-bar">
      <use xlink:href="<%= image_url('sprite.svg') %>#close-cross-white"/>
    </svg>
  </div>

  <div class="notification-bar alert
    <% if alert.nil? %> hidden-bar
    <% end %>">
    <p><%= alert %></p>
    <i class="fa fa-times-circle" aria-hidden="true"></i>
  </div>
  <!-- END Notifications -->


  <nav class="grilla">
    <div class="left-container">

      <a class="logo menu-button" href="<%= root_path %>">
        <svg>
          <use xlink:href="<%= image_url('sprite.svg') %>#lazlo-logo"/>
        </svg>
      </a>

      <a class="menu-button" href="<%= root_path %>">
        <h2 class="expandable">
          PRODUCTOS
        </h2>
        <span class="smooth-transition"></span>
      </a>

      <a class="menu-button current-section" href="<%= root_path %>">
        <h2>DESTACADOS</h2>
        <span class="smooth-transition"></span>
      </a>

    </div>

    <div class="right-container">


      <a class="social-icons with-hover" target="_blank" href="https://www.facebook.com/lazlo.design">
        <span>
          <svg class="header-icon">
            <use xlink:href="<%= image_url('sprite.svg') %>#facebook-icon"/>
          </svg>
          <svg class="hovered">
            <use xlink:href="<%= image_url('sprite.svg') %>#facebook-icon-yellow"/>
          </svg>
        </span>
      </a>

      <a class="social-icons with-hover" target="_blank" href="https://www.instagram.com/lazlo.la/">
        <span>
          <svg class="header-icon">
            <use xlink:href="<%= image_url('sprite.svg') %>#instagram-icon"/>
          </svg>
          <svg class="hovered">
            <use xlink:href="<%= image_url('sprite.svg') %>#instagram-icon-yellow"/>
          </svg>
        </span>
      </a>

      <a class="social-icons with-hover" target="_blank" href="https://www.facebook.com/lazlo">
        <span>
          <svg class="header-icon">
            <use xlink:href="<%= image_url('sprite.svg') %>#pinterest-icon"/>
          </svg>
          <svg class="hovered">
            <use xlink:href="<%= image_url('sprite.svg') %>#pinterest-icon-yellow"/>
          </svg>
        </span>
      </a>

      <a class="social-icons with-hover contact-form-button">
        <span>
          <svg class="header-icon">
            <use xlink:href="<%= image_url('sprite.svg') %>#mail-icon"/>
          </svg>
          <svg class="hovered">
            <use xlink:href="<%= image_url('sprite.svg') %>#mail-icon-yellow"/>
          </svg>
        </span>
      </a>






      <% if user_signed_in? %>
          <a class="header-user-name" href="<%= profile_url %>"><%= current_user.email %></a>

          <a class="social-icons smooth-transition cart-block" href="<%= cart_path %>">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>

            <% if current_user.cart_count.present? %>
                <span class="notification-number"><%= current_user.cart_count %></span>
            <% end %>
          </a>

      <% else %>
          <%= link_to 'iniciar sesiÃ³n', new_user_session_path, :class => 'header-user-name' %>

          <a class="social-icons smooth-transition with-hover cart-block" href="<%= cart_path %>">
            <span>
              <svg class="header-icon">
                <use xlink:href="<%= image_url('sprite.svg') %>#cart-icon"/>
              </svg>
              <svg class="hovered">
                <use xlink:href="<%= image_url('sprite.svg') %>#cart-icon"/>
              </svg>
            </span>
          </a>

      <% end %>


    </div>

  </nav>

</header>

