<div class="profile-products-block">
  <div class="profile-products-inner-block">
    <% if current_user.checkout_list.present? %>
      <div class="user-cart-left-block">
        <% current_user.checkout_list.product_rows.each do |product_row|
          @product_row = product_row
        %>
          <!-- Start Product Cart Row -->
          <%= render :partial => 'users/cart/product_cart_row' %>
          <!-- End Product Cart Row -->
        <% end %>
      </div>

      <div class="user-cart-right-block">
        <h2>Total</h2>
        <h3 class="total-sum"></h3>
        <a href="<%= cart_checkout_url %>" class="checkout-button smooth-transition  yellow-with-icon-hover button">
          <span>CHECKOUT</span>
          <i class="fa fa-shopping-cart" aria-hidden="true"></i>
        </a>
      </div>

    <% else %>
      <div class="no-products-message">
        No tienes ning√∫n producto en el carrito
      </div>

    <% end %>
  </div>
</div>