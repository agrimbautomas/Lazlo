<div class="profile-products-block">
  <div class="profile-products-inner-block">
    <% if current_user.checkout_list.present? and current_user.checkout_list.product_rows.present? %>
      <% current_user.checkout_list.product_rows.each do |product_row| %>
        <div class="cart-product-row"
             data-remove-path="<%= remove_cart_product_row_url product_hash(product_row.product.id) %>">

          <i class="fa fa-times smooth-transition" aria-hidden="true"></i>

          <div class="cart-product-image">
            <img src="<%= product_row.product.image.url(:thumb) %>"/>
          </div>

          <h2>
            <a href="<%= product_path product_row.product %>" class="smooth-transition">
              <%= product_row.product.name %>
            </a>
          </h2>

          <span class="cart-product-price"><%= format_price product_row.product.price %></span>
        </div>
      <% end %>
    <% else %>
      <div class="no-products-message">
        <h5>Todavía no marcaste ningún producto como favorito
          <a class="product-action-button with-hover">
            <%= render :partial => 'icons/like_button' %>
          </a>
        </h5>
      </div>
    <% end %>
  </div>
</div>