<!-- Start Header -->
<%= render :partial => 'layouts/header' %>
<!-- End Header -->



<div class="grilla user-cart">
  <h3>FAVORITOS</h3>


  <% if @user_products.present? %>
      <% @user_products.each do |product| %>
          <div class="cart-product-row">

            <i class="fa fa-times smooth-transition" aria-hidden="true"></i>

            <div class="cart-product-image">
              <img src="<%= product.image.url(:thumb) %>"/>
            </div>

            <h2>
              <a href="<%= product_path product %>" class="smooth-transition"><%= product.name %></a>
            </h2>

            <span class="cart-product-price">
              <%= '$' + product.price.to_i.to_s unless product.price.nil? %>
            </span>
          </div>
      <% end %>
  <% end %>
</div>



<!-- Start Footer -->
<%= render :partial => 'layouts/footer' %>
<!-- End Footer -->
