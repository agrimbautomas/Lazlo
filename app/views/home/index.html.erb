<div class="grilla">

  <!-- Start Header -->
  <%= render :partial => 'home/header_main' %>
  <!-- End Header -->

  <!-- Start articulos -->
  <div class="articulos">

    <% @categories.each_with_index do |category, index = 1|

      block_class = if index % 5 == 0
                      'violet'
                    elsif index % 4 == 0
                      'blue'
                    elsif index % 3 == 0
                      'green'
                    elsif index % 2 == 0
                      'red'
                    elsif index % 1 == 0
                      'yellow'
                    else
                      ''
                    end

    %>
        <a class="home-category-block <%= block_class %> <%= index %> <%= index % 2 == 1 ? 'even' : '' %>" href="/<%= category.slug %>"
           style="background-image: url('<%= category.image.url(:medium) %>')">
          <h2 class="transition "><%= category.name %></h2>
        </a>
    <% end %>

  </div>
</div>
<!-- end articulos -->




<!-- Start Footer -->
<%= render :partial => 'home/footer_main' %>

<!-- End Footer -->



